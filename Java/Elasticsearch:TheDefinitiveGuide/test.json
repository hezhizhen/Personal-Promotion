{
    "_source":
    {
        "exclude":["index.*","data.tag.tags",
            "data.content.*",
            "data.comments.content.*",
            "data.replies.content.*",
            "data.comments","data.replies"]
    },
    "from":0,
    "query":
    {
        "filtered":
        {
            "filter":
            {
                "and":[
                    {
                        "not":
                        {
                            "term":
                            {
                                "data.tag.category.key":"test"
                            }
                        }
                    },
                    {
                        "not":
                        {
                            "terms":
                            {
                                "data.tag.tags.key":["_hidden","_template"]
                            }
                        }
                    },
                    {
                        "not":
                        {
                            "terms":
                            {
                                "data.tag.normalized.key":["flag:tag_guru_intro"]
                            }
                        }
                    },
                    {
                        "or":[
                            {
                                "not":
                                {
                                    "exists":
                                    {
                                        "field":"data.tag.kind"
                                    }
                                }
                            },
                            {
                                "term":
                                {
                                    "data.tag.kind":"qa"
                                }
                            }
                        ]
                    },
                    {
                        "terms":
                        {
                            "data.tag.normalized.key":["充电站","情感","吃穿玩乐"]
                        }
                    }
                ]
            },
            "query":
            {
                "more_like_this":
                {
                    "docs":[
                        {
                            "_id":"thread:7iyDP24Pk",
                            "_index":"discussion",
                            "_type":"thread"
                        }
                    ],
                    "fields":["index.snippet"],
                    "min_term_freq":1,
                    "stop_words":["什么","怎样","一种","什么样"]
                }
            }
        }
    },
    "size":10
}
